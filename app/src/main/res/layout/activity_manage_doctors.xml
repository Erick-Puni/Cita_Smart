<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:padding="16dp"
    android:fillViewport="true">

    <!-- CardView para el formulario -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="?attr/colorSurface"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="28dp">

            <!-- Encabezado -->
            <TextView
                android:id="@+id/tvDoctorRegisterHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar Médico"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginBottom="16dp"/>

            <!-- Campo Nombre del Médico -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDoctorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="?attr/colorPrimary"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDoctorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre del Médico"
                    android:inputType="textPersonName"
                    android:textColor="?attr/colorOnBackground"
                    android:textColorHint="?attr/colorOnSurface"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Especialidad -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSpeciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="?attr/colorPrimary"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSpeciality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Especialidad"
                    android:inputType="text"
                    android:textColor="?attr/colorOnBackground"
                    android:textColorHint="?attr/colorOnSurface"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Dispensario -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDispensary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="?attr/colorPrimary"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDispensary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Dispensario"
                    android:inputType="text"
                    android:textColor="?attr/colorOnBackground"
                    android:textColorHint="?attr/colorOnSurface"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Localidad -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilLocality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="?attr/colorPrimary"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLocality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Localidad (obligatoria)"
                    android:inputType="text"
                    android:textColor="?attr/colorOnBackground"
                    android:textColorHint="?attr/colorOnSurface"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón Registrar Médico -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegisterDoctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar Médico"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_marginBottom="12dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.core.widget.NestedScrollView>
